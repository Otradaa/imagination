@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="@Model.Input.Email"></label>
                        <input asp-for="@Model.Input.Email" class="form-control" />
                        <span asp-validation-for="@Model.Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Input.ShortName"></label>
                        <input asp-for="@Model.Input.ShortName" class="form-control" />
                        <span asp-validation-for="@Model.Input.ShortName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Input.Password"></label>
                        <input asp-for="@Model.Input.Password" class="form-control" />
                        <span asp-validation-for="@Model.Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="@Model.Input.FirstName"></label>
                        <input asp-for="@Model.Input.FirstName" class="form-control" />
                        <span asp-validation-for="@Model.Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Input.LastName"></label>
                        <input asp-for="@Model.Input.LastName" class="form-control" />
                        <span asp-validation-for="@Model.Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Input.ConfirmPassword"></label>
                        <input asp-for="@Model.Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="@Model.Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div style="margin-top:10px">
                <button type="submit" class="btn btn-secondary">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
