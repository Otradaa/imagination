@model IEnumerable<ChannelService.Data.Models.Channel>

@{
    Layout = "_Layout";
    var count = Model.Count();
}

<h3>Top-@(count > 10 ? 10 : count) случайных каналов:</h3>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">№</th>
            <th scope="col">Название</th>
            <th scope="col">Дата</th>
            <th scope="col">Описание</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>
                    @Html.ActionLink(Model.ElementAt(i).Name, "GetFullChannel", "Images", new { id = Model.ElementAt(i).Id }, null)
                </td>
                <td>@Model.ElementAt(i).Date</td>
                <td>@Model.ElementAt(i).Description</td>
            </tr>
        }
    </tbody>
</table>